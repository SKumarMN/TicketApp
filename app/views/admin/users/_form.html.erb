<%= form_for [:admin, @user] do |f| %>
	<%= f.error_messages %>
	<p>
		<%= f.label :email %>
		<%= f.text_field :email %>
	</p>	
	<p>
		<%= f.label :password %>
		<%= f.password_field :password %>
	</p>

	<p>
		<%= label_tag :admin_field , "Is Admin?"%>
		<%= check_box_tag :admin_field %>
	</p>
	<%= f.submit %>
		
<% end %>